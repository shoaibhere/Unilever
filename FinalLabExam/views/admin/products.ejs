<div class="pagination">
  <h4 class="me-5">Pages</h4>
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <% if (hasPrevPage) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage - 1 %>&limit=<%= limit %>" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
        <% } else { %>
          <li class="page-item disabled">
            <span class="page-link" aria-hidden="true">&laquo;</span>
          </li>
        <% } %>
  
        <% for (let page = 1; page <= totalPages; page++) { %>
          <li class="page-item <%= page === currentPage ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= page %>&limit=<%= limit %>"><%= page %></a>
          </li>
        <% } %>
  
        <% if (hasNextPage) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage + 1 %>&limit=<%= limit %>" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        <% } else { %>
          <li class="page-item disabled">
            <span class="page-link" aria-hidden="true">&raquo;</span>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>
  
<h3><%- pageTitle %></h3>

<a href="/admin/products/create" class="btn btn-info">Create New Product</a>
<form action="/admin/products" method="GET" class="d-flex form-inline my-2">
  <input class="form-control mr-sm-2" type="search" placeholder="Search by product name" aria-label="Search" name="search">
  <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
</form>
<table class="table table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Brand</th>
      <th>Product</th>
      <th>Price</th>
      <th>Description</th>
      <th>Image</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for (let index = 0; index < products.length; index++) { %>
      <tr>
        <td><%= products[index].brand ? products[index].brand.brandName : "No Brand" %></td>
        <td><%= products[index].title %></td>
        <td><%= products[index].price %> PKR</td>
        <td><%= products[index].description %></td>
        <td><img src="<%= products[index].productImage %>" alt="" class="w-25"></td>
        <td>
          <a href="/admin/products/edit/<%= products[index]._id %>" class="btn btn-warning">Edit</a>
          <a href="/admin/products/delete/<%= products[index]._id %>" class="btn btn-danger">Delete</a>
        </td>
      </tr>
    <% } %>
  </tbody>
</table>

